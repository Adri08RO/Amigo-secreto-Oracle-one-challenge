// Función para sortear amigo
function sortearAmigo() {
    if (names.length === 0) {
        console.log("No hay nombres en la lista. Escriba un nombre primero.");
        return;
    }

    //Sortear Amigo de forma random
    let randomIndex = Math.floor(Math.random() * listaAmigos.length);
    let seleccionado = listaAmigos[randomIndex];

    console.log(`El amigo secreto sorteado es: ${seleccionado}`);
    alert(`The selected name is: ${seleccionado}`);
}

